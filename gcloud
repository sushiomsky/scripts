sudo su
cd
wget https://github.com/pooler/cpuminer/releases/download/v2.4.5/pooler-cpuminer-2.4.5-linux-x86_64.tar.gz
tar -xvzf pooler-cpuminer-2.4.5-linux-x86_64.tar.gz 
ls
rm pooler-cpuminer-2.4.5-linux-x86_64.tar.gz 
mv minerd /usr/bin/
update-rc.d rc.local enable
echo '#!/bin/bash' > /etc/rc.local
echo 'nohup minerd --url=stratum+tcp://litecoinpool.org:3333 --userpass=solarwasser.6:1 >> /dev/null' >> /etc/rc.local
reboot
